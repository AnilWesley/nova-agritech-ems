                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
                        android:id="@+id/llMyAsserts"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMyAsserts"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="6dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.72"
                            android:singleLine="true"
                            android:text="Asserts"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
                        android:id="@+id/llMyAllowances"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivAllowances"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="6dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:alpha="0.72"
                            android:ellipsize="marquee"
                            android:gravity="center_horizontal"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="Allowances"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
                        android:id="@+id/llSales"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivSales"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="6dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.72"
                            android:singleLine="true"
                            android:text="Sales"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color_dark" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvHrMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="24dp"
                android:text="HR Menu"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

            <LinearLayout
                android:id="@+id/llHrMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color_dark" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
                        android:id="@+id/llNewEmp"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:onClick="startHRNewEmpActivity"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/menuAddNewEmp"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="6dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.72"
                            android:singleLine="true"
                            android:text="Add EMP"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
                        android:id="@+id/llDept"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:background="?selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:onClick="startHRDeptActivity"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/menuDept"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="6dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.72"
                            android:text="DEPT"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
