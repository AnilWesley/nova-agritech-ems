                            android:singleLine="true"
                            android:text="Attendence"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
                        android:id="@+id/llMyLeaves"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:onClick="startMyLeavesActivity"
                        android:background="?selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMyLeaves"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="6dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.72"
                            android:singleLine="true"
                            android:text="LEAVES"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <TextView
                        android:layout_width="1dp"
                        android:layout_height="114dp"
                        android:background="@color/line_color_dark" />

                    <LinearLayout
                        android:id="@+id/llMyHolidays"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="12dp"
                        android:layout_weight="1"
                        android:onClick="startHolidaysActivity"
                        android:background="?selectableItemBackground"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="12dp">


                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/ivMyHollidays"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            android:padding="6dp"
                            app:tint="@color/colorPrimary" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:alpha="0.72"
                            android:singleLine="true"
                            android:text="Holidays"
                            android:textAllCaps="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                            android:textSize="@dimen/home_menu_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
